function DistanceFromArray(TheTiles: TTilesArray): integer;
var
  MyPos: TTile;
  I: integer;
begin
  MyPos := GetMyPos;
  Result := High(Result);
  for I := 0 to High(TheTiles) do
    Result := Min(Result, Distance(MyPos.x, MyPos.y, TheTiles[I].X, TheTiles[I].Y));
end;

